FROM runnable/base:1.0.0

# Install desired ruby version
RUN rbenv install <ruby-version>
RUN rbenv global <ruby-version>
RUN /bin/bash -l -c "gem install bundler"

<before-main-repo>
#default run:/bin/bash -l -c "bundle install"
<after-main-repo>

# Open up ports on the server
EXPOSE <user-specified-ports>

# Command to start the app
CMD <start-command>
