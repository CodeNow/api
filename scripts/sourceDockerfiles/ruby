FROM ruby:<ruby-version>

RUN apt-get update -qq && apt-get install -y \
  build-essential \
  libpq-dev \
  libxml2-dev \
  libxslt1-dev \
  libqt4-webkit \
  libqt4-dev \
  xvfb \
  nodejs

<before-main-repo>
#default run:bundle install
<after-main-repo>

# Open up ports on the server
EXPOSE <user-specified-ports>

# Command to start the app
CMD <start-command>
