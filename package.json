{
  "name": "api-server",
  "description": "api-server",
  "version": "0.1.2",
  "repository": {
    "type": "git",
    "url": "http://github.com/CodeNow/api-server.git"
  },
  "private": true,
  "dependencies": {
    "coffee-script": "~1.6.3",
    "nodemon": "~0.7.8",
    "express": "~3.2.6",
    "redis": "~0.8.3",
    "eson": "~0.4.1",
    "node-uuid": "~1.4.0",
    "async": "~0.2.9",
    "docker.js": "git://github.com/CodeNow/docker.js.git",
    "bcrypt": "~0.7.5",
    "mongoose": "~3.6.11",
    "rimraf": "~2.1.4",
    "mkdirp": "~0.3.5",
    "dnode": "~1.0.5",
    "mocha-phantomjs": "~3.0.0",
    "wrench": "~1.5.1",
    "lodash": "~1.3.1",
    "source-map-support": "~0.1.5",
    "request": "~2.21.0",
    "upnode": "~0.4.3",
    "debug": "~0.7.2",
    "nodetime": "0.8.12",
    "rollbar": "~0.2.5",
    "fstream": "~0.1.24",
    "tar": "~0.1.18",
    "mu2": "~0.5.19",
    "email": "0.2.5",
    "formidable": "~1.0.14",
    "concat-stream": "~1.0.1",
    "mongoose-text-search": "0.0.2",
    "mailchimp": "~1.1.0",
    "strong-agent": "*"
  },
  "devDependencies": {
    "mocha": "~1.9.0",
    "mongodb": "~1.3.9",
    "should": "~1.2.2",
    "superagent": "~0.14.6",
    "nock": "~0.27.0",
    "supertest": "~0.8.2",
    "methods": "~0.1.0"
  },
  "engine": "node >= 0.10.5",
  "scripts": {
    "start": "npm build; node server.js",
    "build": "coffee -m -o lib src",
    "watch": "npm run build; coffee -m -w -o lib src & nodemon -w lib -w configs -q server.js",
    "testwatch": "coffee -m -w -o lib src & NODE_ENV=testing nodemon --delay 1 -w lib -w test -w configs -x mocha test",
    "coverage": "npm run build; jscoverage l ib lib-cov; rm -rf lib; mv lib-cov lib; mkdir ./coverage; mocha -t 10000 --reporter html-cov > ./coverage/index.html",
    "test": "npm run build && npm run lint && NODE_ENV=testing mocha",
    "test-int": "npm run build && npm run lint && NODE_ENV=testing-integration mocha",
    "clean": "rm -rf ./lib; rm -rf ./coverage",
    "lint": "jshint --verbose --show-non-errors ."
  }
}
