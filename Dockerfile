# Installing API-Server
RUN eval `ssh-agent` ; ssh-add ~/.ssh/id_rsa ; git clone git@github.com:CodeNow/api-server.git ; cd api-server ; sudo npm install ; sudo make ; sudo npm build ; sudo npm install pm2 -g 

# Config changes 
RUN  mongo_host=10.10.10.10 ; redis_host=10.10.10.11 ; internal_ip=`facter ipaddress_eth0` ; domain_name=runnable.com ; harbourmaster=10.10.10.12
# To change the Mongodb IP Address, Redis IP Address, API-server IP to internal IP, harbourmaster IP Address 
#RUN cat /api-server/configs/staging.json |grep -r mongo |sed -i s#10.0.1.34#$mongo_host# /api-server/configs/staging.json ; cat /api-server/configs/staging.json  | grep -A1 'redis' | sed -i s#10.0.1.125#$redis_host# /api-server/configs/staging.json ; cat /api-server/configs/staging.json  |grep -m2 'ipaddress' |tail -n1 |sed -i s#10.0.1.93#$internal_ip# /api-server/configs/staging.json ; cat /api-server/configs/staging.json  |grep -r 'rootDomain' | sed -i s#runnable.pw#$domain_name#g /api-server/configs/staging.json ; cat /api-server/configs/staging.json  |grep -r 'harbourmaster' |sed -i s#10.0.1.9#$harbourmaster# /api-server/configs/staging.json 

RUN echo '#!/bin/bash' > config.sh ; echo 'cat /api-server/configs/staging.json |grep -r mongo |sed -i s#10.0.1.34#$mongo_host# /api-server/configs/staging.json ; cat /api-server/configs/staging.json  | grep -A1 'redis' | sed -i s#10.0.1.125#$redis_host# /api-server/configs/staging.json ; cat /api-server/configs/staging.json  |grep -m2 'ipaddress' |tail -n1 |sed -i s#10.0.1.93#$internal_ip# /api-server/configs/staging.json ; cat /api-server/configs/staging.json  |grep -r 'rootDomain' | sed -i s#runnable.pw#$domain_name#g /api-server/configs/staging.json ; cat /api-server/configs/staging.json  |grep -r 'harbourmaster' |sed -i s#10.0.1.9#$harbourmaster# /api-server/configs/staging.json' >> config.sh
RUN chmod +x config.sh

## Installing go for etcd (service discovery)
RUN wget https://go.googlecode.com/files/go1.2.1.linux-amd64.tar.gz ; tar -C /usr/local -xzf go1.2.1.linux-amd64.tar.gz ; mkdir -p /usr/local/go ; export PATH=$PATH:/usr/local/go/bin ; export GOROOT=/usr/local/go ; export PATH=$PATH:$GOROOT/bin ; git clone https://github.com/coreos/etcd ; cd etcd ; ./build
# RUN cd etcd ; ./bin/etcd -peer-addr `facter ec2_public_ipv4`:7001 -addr `facter ec2_public_ipv4`:4001 -data-dir machines/machine1 -name machine1

# Expose port to Host
EXPOSE 3000 4001 7001 
